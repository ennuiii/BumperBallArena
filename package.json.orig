{
  "name": "cluescale",
  "version": "1.0.0",
  "description": "ClueScale - A multiplayer guessing game with 1-10 scale",
  "main": "dist/server/server.js",
  "scripts": {
    "server": "nodemon --exec ts-node server/server.ts",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "tsc",
    "build:client": "cd client && npm install && npm run build",
    "start": "node dist/server/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["game", "multiplayer", "guessing", "clue", "gamebuddies"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
